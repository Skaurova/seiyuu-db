datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" 
}

generator client {
  provider = "prisma-client-js"
}

model Role {
  id    String  @id @default(uuid())
  name  String  @unique
  users User[]
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String
  password  String  
  avatar    String?
  active    Boolean  @default(true)
  lastLogin DateTime?
  roleId    String?
  role      Role?    @relation(fields: [roleId], references: [id])
}
